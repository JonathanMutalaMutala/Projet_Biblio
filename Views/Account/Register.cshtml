@using Projet_Biblio.ViewModel;
@model LoginDto

@{
    ViewData["Title"] = "Register";
} 

<h1>@ViewData["Title"]</h1>

<div class="container">
    <form id="registerForm" asp-route-returnUrl="@Model?.ReturnUrl" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div style="margin-bottom:30px;">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-floating mb-2">
                        <input asp-for="FirstName" class="form-control" autocomplete="firstName" aria-required="true" />
                        <label asp-for="FirstName"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-floating mb-2">
                        <input asp-for="LastName" class="form-control" autocomplete="lastName" aria-required="true" />
                        <label asp-for="LastName"></label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-floating mb-2">
                        <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-floating mb-2">
                        <input asp-for="UserName" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="UserName"></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-floating mb-2">
                        <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-floating mb-2">
                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-floating mb-2">
                        <select asp-for="Role" class="form-select" id="roles">
                            <option value="EMPLOYEE">EMPLOYEE</option>
                            <option value="ADMIN">ADMIN</option>
                            <option value="LIBRARIAN">LIBRARIAN</option>
                            <option value="MEMBER">MEMBER</option>
                        </select>
                        <label asp-for="Role"></label>
                    </div>
                </div>
            </div>
        </div>
     
        <div class="" style="display:flex; justify-content:end;margin-top:20px;">

            <div>
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" style="margin-right:20px;">Back</a>
                <button class="btn btn-success" type="submit">Register</button>
            </div>
        </div>
    </form>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
