@using Projet_Biblio.ViewModel

@model LoginDto
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<hr />

<div class="row">
    <div class="" style="display: flex; justify-content:center;text-align:center; ">
        <div class="col-md-4">
            <form asp-action="Login" asp-controller="Account">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating" style="margin-bottom: 20px;">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <label asp-for="Email" class="control-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating" style="margin-bottom: 20px;">
                    <input asp-for="Password" class="form-control" placeholder="Password" id="floatingInput" />
                    <label asp-for="Password" class="control-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="" asp-area="" asp-controller="Account" asp-action="Register">Register as new user</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}